doctype html
html.
    <head>
        <title>Rythmicreads</title>
        <style>
            input[type=text], select {
                width: 100%;
                padding: 12px 20px;
                margin: 8px 0;
                display: inline-block;
                border: 1px solid #ccc;
                border-radius: 4px;
                box-sizing: border-box;
            }
            input[type=submit] {
                width: 100%;
                background-color: #009688;
                color: white;
                padding: 14px 20px;
                margin: 8px 0;
                border: none;
                border-radius: 4px;
                cursor: pointer;
                font-size:20px;
            }
            input[type=submit]:hover {
                background-color: #45a049;
            }
            div {
                border-radius: 5px;
                background-color: #e0f2f1;
                padding: 20px;
            }
        </style>
    </head>
    <body>
        <div style="background-color:#009688">
            <h1 style="text-align:center;color:white;font-size:50px;">Rythmicreads</h1>
        </div>
        <div>
            <form action="/book" method="post">
                <label for="bookName">Novel Name</label>
                <input type="text" id="bookName" name="bookName">
                <label for="authorName">Author Name</label>
                <input type="text" id="authorName" name="authorName">
                <input type="submit" value="Submit">
            </form> 
        </div>
        <ul id="myUL" >
        </ul>
    </body>
